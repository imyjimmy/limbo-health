{
  "name": "limbo-health-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "scripts/build.sh",
    "dev": "scripts/dev.sh",
    "dev:cache": "scripts/dev.sh N",
    "prod": "scripts/prod.sh",
    "prod:rebuild": "scripts/prod.sh Y '' Y",
    "nuke": "scripts/nuke.sh",
    "stop": "scripts/backup-mysql.sh && docker-compose -f docker-compose.yml -f docker-compose.development.yml --env-file .env.development down",
    "stop:prod": "docker-compose -f docker-compose.yml -f docker-compose.production.yml --env-file .env.production down",
    "logs": "docker-compose -f docker-compose.yml -f docker-compose.development.yml --env-file .env.development logs -f",
    "logs:prod": "docker-compose -f docker-compose.yml -f docker-compose.production.yml --env-file .env.production logs -f",
    "mgit:start": "cd apps/mgit-api && npm start",
    "admin:dev": "cd apps/admin-frontend && npm run dev",
    "patient:dev": "cd apps/patient-frontend && npm run dev",
    "mobile:build:ios:production": "npm --prefix apps/react-native run build:ios:production",
    "restart": "docker-compose -f docker-compose.yml -f docker-compose.development.yml restart",
    "down": "docker-compose -f docker-compose.yml -f docker-compose.development.yml down",
    "up": "docker-compose -f docker-compose.yml -f docker-compose.development.yml up -d",
    "test:integration": "vitest run",
    "test:integration:watch": "vitest watch",
    "test:integration:verbose": "vitest run --reporter=verbose",
    "test:auth": "vitest run apps/auth-api/__tests__ --reporter=verbose",
    "test:mgit": "vitest run apps/mgit-api/__tests__ --reporter=verbose"
  },
  "devDependencies": {
    "@isomorphic-git/lightning-fs": "^4.6.0",
    "@noble/curves": "^1.8.2",
    "@noble/hashes": "^1.7.2",
    "dotenv": "^16.5.0",
    "fake-indexeddb": "^6.2.5",
    "isomorphic-git": "^1.29.0",
    "nodemon": "^3.1.10",
    "nostr-tools": "^2.12.0",
    "vitest": "^3.2.1"
  }
}
